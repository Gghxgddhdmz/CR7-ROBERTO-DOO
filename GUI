-- Rayfield-style GUI Library local GUI = {} local UIS = game:GetService("UserInputService")

local ScreenGui = Instance.new("ScreenGui", game.CoreGui) ScreenGui.Name = "RayfieldCustomGUI"

local MainFrame = Instance.new("Frame", ScreenGui) MainFrame.Size = UDim2.new(0, 600, 0, 400) MainFrame.Position = UDim2.new(0.25, 0, 0.2, 0) MainFrame.BackgroundColor3 = Color3.fromRGB(25, 25, 25) MainFrame.BorderSizePixel = 0 MainFrame.Active = true MainFrame.Draggable = true

local Title = Instance.new("TextLabel", MainFrame) Title.Size = UDim2.new(1, 0, 0, 40) Title.BackgroundTransparency = 1 Title.Text = "GUI Title" Title.Font = Enum.Font.GothamBold Title.TextSize = 18 Title.TextColor3 = Color3.fromRGB(255, 255, 255)

local TabBar = Instance.new("Frame", MainFrame) TabBar.Size = UDim2.new(0, 150, 1, -40) TabBar.Position = UDim2.new(0, 0, 0, 40) TabBar.BackgroundColor3 = Color3.fromRGB(30, 30, 30) TabBar.BorderSizePixel = 0

local ContentArea = Instance.new("Frame", MainFrame) ContentArea.Size = UDim2.new(1, -150, 1, -40) ContentArea.Position = UDim2.new(0, 150, 0, 40) ContentArea.BackgroundColor3 = Color3.fromRGB(35, 35, 35) ContentArea.BorderSizePixel = 0

local Tabs = {} local Sections = {}

function GUI.MakeWindow(data) Title.Text = data.Hub and data.Hub.Title or "GUI" end

function GUI.NewTab(name) local tabButton = Instance.new("TextButton", TabBar) tabButton.Size = UDim2.new(1, 0, 0, 40) tabButton.Text = name tabButton.Font = Enum.Font.GothamBold tabButton.TextColor3 = Color3.fromRGB(255, 255, 255) tabButton.TextSize = 14 tabButton.BackgroundColor3 = Color3.fromRGB(40, 40, 40) tabButton.BorderSizePixel = 0

local tabFrame = Instance.new("ScrollingFrame", ContentArea)
tabFrame.Size = UDim2.new(1, 0, 1, 0)
tabFrame.CanvasSize = UDim2.new(0, 0, 0, 0)
tabFrame.ScrollBarThickness = 6
tabFrame.Visible = false
tabFrame.AutomaticCanvasSize = Enum.AutomaticSize.Y
tabFrame.BackgroundTransparency = 1

local layout = Instance.new("UIListLayout", tabFrame)
layout.Padding = UDim.new(0, 8)
layout.SortOrder = Enum.SortOrder.LayoutOrder

tabButton.MouseButton1Click:Connect(function()
	for _, t in pairs(ContentArea:GetChildren()) do
		if t:IsA("ScrollingFrame") then t.Visible = false end
	end
	tabFrame.Visible = true
end)

Tabs[name] = tabFrame
return tabFrame

end

function GUI.AddSection(tab, sectionName) local label = Instance.new("TextLabel", tab) label.Size = UDim2.new(1, -10, 0, 30) label.BackgroundTransparency = 1 label.Text = sectionName label.Font = Enum.Font.GothamBold label.TextSize = 16 label.TextColor3 = Color3.fromRGB(255, 255, 255) Sections[sectionName] = tab end

function GUI.AddButton(tab, data) local button = Instance.new("TextButton", tab) button.Size = UDim2.new(0, 200, 0, 35) button.BackgroundColor3 = Color3.fromRGB(50, 50, 50) button.Text = data.Name button.Font = Enum.Font.Gotham button.TextSize = 14 button.TextColor3 = Color3.fromRGB(255, 255, 255) button.BorderSizePixel = 0 button.MouseButton1Click:Connect(data.Callback

